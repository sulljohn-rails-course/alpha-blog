<% if obj.errors.any? %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card bg-danger">
        <div class="card-header">
          <%= pluralize(obj.errors.count, "error") %>
          prohibited this article from being saved
        </div>
        <div class="card-text">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end  %>